<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="vertical"
    tools:context="TradespersonActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="101dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="105dp"
            android:layout_height="99dp"
            app:srcCompat="@drawable/logo" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="306dp"
            android:layout_height="101dp"
            android:layout_weight="TopStar"
            android:background="#27DA93"
            android:gravity="center"
            android:text="TopStar Company"
            android:textColor="#ffffff"
            android:textSize="30sp"
            android:visibility="visible" />

    </LinearLayout>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="Welcome Tradesperson"
        android:textSize="24sp" />

    <Button
        android:id="@+id/Button_View_Issue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Issue " />

    <Button
        android:id="@+id/Button_Add_Solved_Issue_Photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Solved Issue Photo" />

</LinearLayout>